<?xml version="1.0" encoding="utf-8"?>
<ScrollView
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/ScrollView1"
        android:layout_width="match_parent"
        android:layout_height="match_parent">


    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

        <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content" android:textSize="30dp" android:paddingTop="10dp"
                android:id="@+id/textView2" android:text="이름" android:gravity="center_horizontal"
                android:fontFamily="@font/bolda"
                android:layout_marginBottom="10dp"/>
        <ImageView
                android:layout_width="match_parent"
                android:layout_height="300dp" app:srcCompat="@mipmap/ic_launcher" android:id="@+id/imageView"
        android:scaleType="fitXY"/>
        <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="50dp">
            <ImageButton
                    android:layout_width="wrap_content"
                    android:background="@drawable/button"
                    android:id="@+id/button" android:layout_weight="1" android:layout_height="match_parent"
                    android:src="@drawable/ic_play"/>
            <ImageButton
                    android:src="@drawable/ic_pause_black_24dp"
                    android:background="@drawable/button"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent" android:id="@+id/button2" android:layout_weight="1"/>


        </LinearLayout>
        <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
            <Button
                    android:text="기본정보"

                    android:layout_width="wrap_content" android:paddingRight="-2dp"
                    android:id="@+id/button3" android:layout_weight="1" android:layout_height="match_parent"
                    android:background="@drawable/button"/>
            <Button
                    android:text="자세히"
                    android:fontFamily="@font/stda"
                    android:layout_width="wrap_content" android:paddingRight="-2dp"
                    android:layout_height="match_parent" android:id="@+id/button4" android:layout_weight="1"
                    android:background="@drawable/button"/>

        </LinearLayout>
        <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

            <TextView
                    android:text="  -설명-"
                    android:fontFamily="@font/stda"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" android:textSize="20dp" android:id="@+id/textView5" android:visibility="invisible"/>
            <LinearLayout android:layout_width="match_parent"
                          android:layout_height="match_parent"
                          android:id="@+id/page1"
                          android:orientation="vertical">
                <TextView
                        android:text="종류 : "
                        android:fontFamily="@font/stda"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" android:textSize="20dp" android:id="@+id/textView"/>
                <TextView
                        android:text="위치 : "
                        android:fontFamily="@font/stda"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"  android:textSize="20dp" android:id="@+id/textView3"/>
                <TextView
                        android:text="시대 : "
                        android:fontFamily="@font/stda"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" android:textSize="20dp" android:id="@+id/textView4"/>
            </LinearLayout>
        </FrameLayout>

    </LinearLayout>
</ScrollView>